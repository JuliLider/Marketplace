<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/segundofondo"
    android:orientation="vertical">

<!--    form-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:background="@color/cookie"
            android:layout_marginTop="1dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="0dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Your Last Name"
            android:background="@color/cookie"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_marginTop="1dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="yourmail@e-mail.com"
            android:background="@color/cookie"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="25sp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Your Password"
            android:background="@color/cookie"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="25sp"/>
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Your Phone Number"
            android:background="@color/cookie"
            android:textSize="20sp"/>

    </LinearLayout>

<!--    checkbox-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept privacy statement policy" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept terms and conditions of use of the site"/>

    </LinearLayout>

<!--    Buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="50dp">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:text="to register"
            android:textColor="@color/brawn_200"
            android:textStyle="bold"
            android:background="@color/brawn"/>

        <Button
            android:id="@+id/btn_return"
            android:onClick="onReturn"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:text="to return"
            android:textColor="@color/brawn_200"
            android:textStyle="bold"
            android:background="@color/beige_500"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>